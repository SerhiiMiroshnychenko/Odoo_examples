<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- -->
    <!-- -->
    <!-- -->

    <!-- Real Property View Tree -->
    <record id="real_property_view_tree" model="ir.ui.view">
        <field name="name">real.property.view.tree</field>
        <field name="model">real.property</field>
        <field name="arch" type="xml">
            <tree string="Real Property">
                <field name="name"/>
                <field name="tag_ids" widget="many2many_tags"/>
                <field name="type_id"/>
                <field name="postcode"/>
                <field name="date_availability"/>
                <field name="expected_price"/>
                <field name="offer_ids"/>
                <field name="best_offer"/>
                <field name="selling_price"/>
            </tree>
        </field>
    </record>

    <!-- Real Property View Form -->
    <record id="real_property_view_form" model="ir.ui.view">
        <field name="name">real.property.view.form</field>
        <field name="model">real.property</field>
        <field name="arch" type="xml">
            <form string="Real Property">
                <header>
                    <button type="object"
                            name="action_sold"
                            string="Sold"
                            class="btn btn-primary"
                    />
                    <button type="object"
                            name="action_cancel"
                            string="Cancel"
                            class="btn btn-danger"
                    />
                    <field name="state"
                           widget="statusbar"
                           statusbar_visible="new,received,accepted,sold"
                    />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button"
                                type="action"
                                name="%(real_estate_ads.action_real_property_offer_smart_button)d">
                            <field name="offer_count" string="Offers" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button"
                                type="object"
                                name="action_property_view_offer_for_button">
                            <field name="offer_count" string="Offers" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <field name="name" placeholder="Real Property Name"/>
                        <field name="tag_ids" widget="many2many_tags" placeholder="Property Tags"/>
                        <group>
                            <field name="state"/>
                            <field name="type_id"/>
                            <field name="postcode"/>
                            <field name="date_availability"/>
                        </group>
                        <group>
                            <field name="expected_price"/>
                            <field name="best_offer"/>
                            <field name="selling_price"/>
                        </group>
                    </group>
                    <notebook>
                        <page name="Description">
                            <group>
                                <field name="description"/>
                                <field name="bedrooms"/>
                                <field name="living_area"/>
                                <field name="facades"/>
                                <field name="garage"/>
                                <field name="garden"/>
                                <field name="garden_area"/>
                                <field name="garden_orientation"/>
                                <field name="total_area"/>
                            </group>
                        </page>
                        <page name="Offers">
                            <field name="offer_ids">
                                <tree editable="bottom">
                                    <field name="price"/>
                                    <field name="partner_id"/>
                                    <field name="creation_date"/>
                                    <field name="validity"/>
                                    <field name="deadline"/>
                                    <field name="status" nolabel="1"/>
                                </tree>
                            </field>
                        </page>
                        <page name="Other info">
                            <group>
                                <field name="sales_id"/>
                                <field name="buyer_id"/>
                                <field name="phone"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action Real Property -->
    <record id="action_real_property" model="ir.actions.act_window">
        <field name="name">Property</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">real.property</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="real_property_view_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a Property to Advertise
            </p>
        </field>
    </record>

</odoo>
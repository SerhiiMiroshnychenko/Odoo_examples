<odoo>
    <data>
        <record id="estate_property_action" model="ir.actions.act_window">
            <field name="name">Estate Property</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="estate_property_action_kanban" model="ir.actions.act_window">
            <field name="name">Estate Property Kanban</field>
            <field name="res_model">estate.property</field>
            <field name="view_mode">kanban</field>
        </record>
        <record id="estate_property_type_action" model="ir.actions.act_window">
            <field name="name">Estate Property Types</field>
            <field name="res_model">estate.property.type</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="estate_property_tag_action" model="ir.actions.act_window">
            <field name="name">Estate Property Tags</field>
            <field name="res_model">estate.property.tag</field>
            <field name="view_mode">tree,form</field>
        </record>
        <!-- Дія для відкриття сторінки з offer-ами -->
        <record id="estate_property_offer_action" model="ir.actions.act_window">
            <field name="name">Estate Property Offers</field>
            <field name="res_model">estate.property.offer</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('property_type_id', '=', active_id)]</field>
        </record>
    </data>
</odoo>
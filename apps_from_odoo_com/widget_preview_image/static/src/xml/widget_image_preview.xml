<?xml version="1.0" encoding="UTF-8"?>
<!--add click function in image widget-->
<templates id="template" xml:space="preserve">
    <t t-name="widget_preview_image.image" t-inherit="web.ImageField"
       t-inherit-mode="extension" owl="1">
        <xpath expr="//img[hasclass('img')]" position="attributes">
            <attribute name="t-on-click">img_click</attribute>
        </xpath>
    </t>
</templates>